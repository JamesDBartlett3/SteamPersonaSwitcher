<Window x:Class="SteamPersonaSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Steam Persona Switcher" Height="600" Width="800"
        Icon="icon.ico"
        Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- System Tray Icon -->
        <tb:TaskbarIcon x:Key="TrayIcon"
                        IconSource="icon.ico"
                        ToolTipText="Steam Persona Switcher"
                        TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show Window" Click="ShowWindow_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Settings Section -->
        <GroupBox Grid.Row="0" Header="Settings" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Account Name:"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="UsernameTextBox"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Password:"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                    <PasswordBox x:Name="PasswordBox" Margin="5" Padding="5"/>
                    <CheckBox x:Name="RememberMeCheckBox" Content="Remember my credentials securely" 
                              Margin="5,0,5,5"
                              ToolTip="Credentials are encrypted using Windows DPAPI and stored locally"/>
                </StackPanel>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Check Interval (seconds):"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="CheckIntervalTextBox" Text="10"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Default Persona Name:" 
                           ToolTip="Your Profile Name, Nickname, etc. when not gaming"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="DefaultPersonaTextBox" Text="Not Gaming"/>
            </Grid>
        </GroupBox>

        <!-- Tray Options -->
        <GroupBox Grid.Row="1" Header="Tray Options" Padding="10">
            <StackPanel>
                <CheckBox x:Name="StartMinimizedCheckBox" Content="Start minimized to tray"/>
                <CheckBox x:Name="MinimizeToTrayCheckBox" Content="Minimize to tray instead of taskbar"/>
                <CheckBox x:Name="CloseToTrayCheckBox" Content="Minimize to tray on close (instead of exiting)" IsChecked="True"/>
            </StackPanel>
        </GroupBox>

        <!-- Game Persona Mappings -->
        <GroupBox Grid.Row="2" Header="Game Persona Names" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" x:Name="GamePersonaGrid" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          Margin="0,0,0,5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Game Process Name (e.g., game.exe)" 
                                          Binding="{Binding Key}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="Persona Name" 
                                          Binding="{Binding Value}" 
                                          Width="*"/>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Remove" Click="RemoveGame_Click" 
                                            Tag="{Binding Key}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBox x:Name="NewGameProcessTextBox" Width="250" 
                             Margin="5" Padding="5"
                             Text="game.exe"/>
                    <TextBox x:Name="NewPersonaNameTextBox" Width="250" 
                             Margin="5" Padding="5"
                             Text="Playing Game"/>
                    <Button Content="Add Game" Click="AddGame_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="StartButton" Content="Start" Click="Start_Click" Width="100"/>
            <Button x:Name="StopButton" Content="Stop" Click="Stop_Click" Width="100" IsEnabled="False"/>
            <Button Content="Save Config" Click="SaveConfig_Click" Width="100"/>
            <Button Content="Load Config" Click="LoadConfig_Click" Width="100"/>
            <Button Content="Clear Credentials" Click="ClearCredentials_Click" Width="120"
                    ToolTip="Delete saved login credentials"/>
        </StackPanel>

        <!-- Status Log -->
        <GroupBox Grid.Row="4" Header="Status" Padding="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="StatusTextBox" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Background="#F0F0F0"
                         BorderThickness="0"
                         Margin="0"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
