<Window x:Class="SteamPersonaSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:SteamPersonaSwitcher"
        Title="Steam Persona Switcher" 
        SizeToContent="Height"
        Width="800"
        MinWidth="700"
        Icon="icon.ico"
        Closing="Window_Closing">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- System Tray Icon -->
        <tb:TaskbarIcon x:Key="TrayIcon"
                        IconSource="icon.ico"
                        ToolTipText="Steam Persona Switcher"
                        TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show Window" Click="ShowWindow_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="240"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Settings Section -->
        <GroupBox Grid.Row="0" Header="Settings" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Account Name:"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="UsernameTextBox"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Password:"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                    <PasswordBox x:Name="PasswordBox" Margin="5" Padding="5"/>
                    <CheckBox x:Name="RememberMeCheckBox" Content="Remember my credentials securely" 
                              Margin="5,0,5,5"
                              ToolTip="Credentials are encrypted using Windows DPAPI and stored locally"/>
                </StackPanel>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Check Interval (seconds):"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="CheckIntervalTextBox" Text="10"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Default Persona Name:" 
                           ToolTip="Your Profile Name, Nickname, etc. when not gaming"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="DefaultPersonaTextBox" Text="Not Gaming"/>
            </Grid>
        </GroupBox>

        <!-- Startup & Tray Options -->
        <GroupBox Grid.Row="1" Header="Startup &amp; Tray Options" Padding="10">
            <StackPanel>
                <CheckBox x:Name="RunAtStartupCheckBox" Content="Run when Windows starts" Checked="RunAtStartup_Changed" Unchecked="RunAtStartup_Changed"/>
                <CheckBox x:Name="AutoStartServiceCheckBox" Content="Automatically start service on launch" IsChecked="True"/>
                <CheckBox x:Name="StartMinimizedCheckBox" Content="Start minimized to tray"/>
                <CheckBox x:Name="MinimizeToTrayCheckBox" Content="Minimize to tray instead of taskbar"/>
                <CheckBox x:Name="CloseToTrayCheckBox" Content="Minimize to tray on close (instead of exiting)" IsChecked="True"/>
            </StackPanel>
        </GroupBox>

        <!-- Game Persona Mappings -->
        <GroupBox Grid.Row="2" Header="Game Persona Names" Padding="10">
            <DataGrid x:Name="GamePersonaGrid" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#AAAAAA"
                      VerticalGridLinesBrush="#AAAAAA"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      RowHeight="32"
                      InitializingNewItem="GamePersonaGrid_InitializingNewItem"
                      RowEditEnding="GamePersonaGrid_RowEditEnding">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Padding" Value="5,3,5,5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="5,0"/>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Game Process Name (e.g., game.exe)" 
                                      Binding="{Binding ProcessName, UpdateSourceTrigger=PropertyChanged}" 
                                      Width="2*"
                                      IsReadOnly="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Padding" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Persona Name" 
                                      Binding="{Binding PersonaName, UpdateSourceTrigger=PropertyChanged}" 
                                      Width="2*"
                                      IsReadOnly="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Padding" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Actions" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Remove" Click="RemoveGame_Click" 
                                        Tag="{Binding}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        MinWidth="70"
                                        Padding="5,2">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ProcessName, Converter={StaticResource StringNotEmptyConverter}}" Value="True"/>
                                                        <Condition Binding="{Binding PersonaName, Converter={StaticResource StringNotEmptyConverter}}" Value="True"/>
                                                        <Condition Binding="{Binding IsCommitted}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="StartButton" Content="Start" Click="Start_Click" Width="100"/>
            <Button x:Name="StopButton" Content="Stop" Click="Stop_Click" Width="100" IsEnabled="False"/>
            <Button Content="Save Config" Click="SaveConfig_Click" Width="100"/>
            <Button Content="Load Config" Click="LoadConfig_Click" Width="100"/>
            <Button Content="Clear Credentials" Click="ClearCredentials_Click" Width="120"
                    ToolTip="Delete saved login credentials"/>
        </StackPanel>

        <!-- Status Log -->
        <GroupBox Grid.Row="4" Header="Status" Padding="5">
            <TextBox x:Name="StatusTextBox" 
                     IsReadOnly="True" 
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Background="#F0F0F0"
                     BorderThickness="0"
                     Margin="0"/>
        </GroupBox>
    </Grid>
</Window>
